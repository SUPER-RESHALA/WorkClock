<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/timeMain"
        android:layout_width="895dp"
        android:layout_height="249dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="422dp"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="#FFFFFF"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/dateMain"
        android:layout_width="691dp"
        android:layout_height="117dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="285dp"
        android:gravity="center"
        android:text="01.01.2024"
        android:textColor="#FFFFFF"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/instructor"
        android:layout_width="968dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="135dp"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="@string/instr" />

    <TextView
        android:id="@+id/recordedDate"
        android:layout_width="503dp"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="362dp"
        android:layout_marginBottom="379dp"
        android:textColor="#008000"
        android:textSize="50sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/recordedTime"
        android:layout_width="459dp"
        android:layout_height="109dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="384dp"
        android:layout_marginBottom="472dp"
        android:textColor="#008000"
        android:textSize="50sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textReg"
        android:layout_width="601dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="314dp"
        android:layout_marginBottom="277dp"
        android:gravity="center"
        android:text="@string/timeReg"
        android:textColor="#008000"
        android:textSize="50sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textUnreg"
        android:layout_width="817dp"
        android:layout_height="213dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="70dp"
        android:text="@string/timeUnReg"
        android:textColor="#FF0000"
        android:textSize="50sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/code"
        android:layout_width="522dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="356dp"
        android:layout_marginBottom="214dp"
        android:text=" "
        android:visibility="gone" />

    <EditText
        android:id="@+id/cardNumRFID"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="1138dp"
        android:layout_marginBottom="700dp"
        android:ems="10"
        android:inputType="number"


        tools:visibility="gone" />


</RelativeLayout>